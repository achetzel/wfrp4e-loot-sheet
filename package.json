{
  "name": "wfrp4e-loot-sheet",
  "version": "1.0.0",
  "description": "A javascript FoundryVTT module. Adding an additional NPC sheet for Loot/Containers/Merchant",
  "main": "wfrp4e-lootsheetnpc.js",
  "scripts": {
    "all": "yarn run less && yarn run copyfiles && yarn run test",
    "build": "yarn run less && cp -r module.json *.js template lang modules dist",
    "local-deploy": "yarn run build && yarn run localcopy",
    "localcopy": "cd dist && cp -r . /mnt/c/Users/achet/AppData/Local/FoundryVTT/Data/modules/wfrp4e-loot-sheet",
    "less": "lessc -clean-css ./css/main.less ./dist/css/main.css",
    "generate-docs": "jsdoc -c jsdoc.json",
    "test": "nyc --reporter=text mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/achetzel/wfrp4e-loot-sheet.git"
  },
  "keywords": [
    "javascript",
    "less",
    "css",
    "FoundryVTT",
    "module"
  ],
  "author": "achetzel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/achetzel/wfrp4e-loot-sheet/issues"
  },
  "homepage": "https://github.com/achetzel/wfrp4e-loot-sheet#readme",
  "devDependencies": {
    "generate-docs": "^1.1.1",
    "jsdoc-babel": "^0.5.0",
    "jsdoc-to-markdown": "^7.1.0",
    "less-plugin-clean-css": "^1.5.1",
    "lessc": "^1.0.2",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "recursive-copy-cli": "^1.0.20",
    "unit.js": "^2.1.1"
  },
  "type": "module"
}
